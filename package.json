{
  "name": "draftail-playground",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^10.15.2",
    "npm": "^6.4.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "prettier": "^1.16.4",
    "react-scripts": "^2.1.8",
    "react-test-renderer": "^16.8.5",
    "source-map-explorer": "^1.6.0",
    "typescript": "3.3.4000"
  },
  "dependencies": {
    "@types/draft-js": "^0.10.29",
    "@types/jest": "24.0.11",
    "@types/node": "11.11.7",
    "@types/prismjs": "^1.16.0",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.3",
    "@types/react-modal": "^3.8.1",
    "@types/react-resizable": "^1.7.0",
    "@types/react-tabs": "^2.3.1",
    "@types/styled-components": "^4.1.12",
    "core-js": "^2.5.7",
    "draft-js": "^0.10.5",
    "draftail": "^1.2.1",
    "normalize.css": "^8.0.0",
    "prismjs": "^1.6.0",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-json-view": "^1.19.1",
    "react-modal": "^3.8.1",
    "react-resizable": "^1.7.5",
    "react-simpler-select": "^3.0.0",
    "react-tabs": "^3.0.0",
    "reading-time": "^1.1.0",
    "styled-components": "^4.2.0"
  },
  "proxy": "http://localhost:5000",
  "scripts": {
    "heroku-postbuild": "npm run build -s",
    "start": "npm run server -s & npm run watch -s",
    "server": "FLASK_APP=app.py FLASK_DEBUG=1 flask run",
    "watch": "react-scripts start",
    "build": "react-scripts build && source-map-explorer --html build/static/js/main.* > build/source-map-explorer.html",
    "dist": "CI=true npm run build -s",
    "lint": "prettier --check '**/*.{ts,tsx,js,jsx,scss,css,json,md,yml,yaml,html}' && black --check *.py",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,scss,css,json,md,yml,yaml,html}' && black *.py",
    "report:build": "open public/source-map-explorer.html",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --watch",
    "test:coverage": "react-scripts test --coverage",
    "test:ci": "npm run lint -s && npm run dist -s"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
